<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
<link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='../stylesheets/font-awesome-4.6.3/css/font-awesome.min.css' />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/amazeui/2.7.2/css/amazeui.css" />
</head>
<body>
	<%- include header %>

	<div class="am-g">
		<div class="am-u-lg-8 am-u-sm-centered">
			<h1>Blog</h1>
			<% posts.forEach(function (post, index) { %>
			<div class="am-panel am-panel-default">
				<div class="am-panel-hd">
					<p>
						<a href="/article?title=<%=post.title %>"> <%=post.title %>
						</a> | 作者： <a href="#"> <%=post.name %>
						</a> | 日期：
						<%=post.time.minute %>
					</p>
				</div>
				<div class="am-panel-bd">
					<p>
						<%- post.post %>
					</p>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</body>
</html>